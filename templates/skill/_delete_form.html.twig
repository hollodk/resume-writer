<div class="card mb-2">
    <div class="card-header">
        Delete
    </div>
    <div class="card-body">
        <form method="post" action="{{ path('skill_delete', {'id': skill.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ skill.id) }}">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
