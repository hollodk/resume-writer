{% extends 'base.html.twig' %}

{% block title %}Employment{% endblock %}

{% block body %}
    <h1>Employment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employment.id }}</td>
            </tr>
            <tr>
                <th>JobTitle</th>
                <td>{{ employment.jobTitle }}</td>
            </tr>
            <tr>
                <th>Employer</th>
                <td>{{ employment.employer }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ employment.start }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ employment.end }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ employment.city }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ employment.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ employment.createdAt ? employment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ employment.updatedAt ? employment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('employment_index') }}">back to list</a>

    <a href="{{ path('employment_edit', {'id': employment.id}) }}">edit</a>

    {{ include('employment/_delete_form.html.twig') }}
{% endblock %}
