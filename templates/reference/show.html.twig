{% extends 'base.html.twig' %}

{% block title %}Reference{% endblock %}

{% block body %}
    <h1>Reference</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reference.id }}</td>
            </tr>
            <tr>
                <th>FullName</th>
                <td>{{ reference.fullName }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ reference.company }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ reference.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reference.email }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ reference.createdAt ? reference.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ reference.updatedAt ? reference.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reference_index') }}">back to list</a>

    <a href="{{ path('reference_edit', {'id': reference.id}) }}">edit</a>

    {{ include('reference/_delete_form.html.twig') }}
{% endblock %}
